@inherits SimComponentBase

@if (EsVisible)
{
    <div class="@ModalClass" tabindex="-1" style="@Stylename" role="dialog">
        <div class="@ModalDialogClass">
            <div class="modal-content">

                <div class="modal-header">
                    @ModalCabecera
                    <h5 class="modal-title">@Titulo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="ModalCancel">
                        <span class="font-weight-light" aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    @ChildContent
                </div>

                <div class="modal-footer">
                    @ModalPie

                    @switch (BotonesModal)
                    {
                        case TiposdeBoton.Ok:
                            <button type="button" class="btn btn-sm btn-success" @onclick="ModalOk">Guardar</button>
                            break;
                        case TiposdeBoton.CancelarBorrar:
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ModalCancel">Cerrar</button>
                            <button type="button" class="btn btn-sm btn-danger">Borrar</button>
                            break;
                        case TiposdeBoton.OkCancelar:
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ModalCancel">Cerrar</button>
                            <button type="submit" class="btn btn-sm btn-success" @onclick="ModalOk">Guardar</button>
                            break;
                        case TiposdeBoton.Cancelar:
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ModalCancel">Cerrar</button>
                            break;
                        case TiposdeBoton.Link:
                            <a href="@Href" class="btn btn-sm btn-primary">@TituloEnlace</a>
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ModalCancel">Cerrar</button>
                            break;
                        case TiposdeBoton.LinkOK:
                            <a href="@Href" class="btn btn-sm btn-primary">@TituloEnlace</a>
                            <button type="submit" class="btn btn-sm btn-success" @onclick="ModalOk">Guardar</button>
                            break;
                        case TiposdeBoton.SinBtn:
                            break;
                        case TiposdeBoton.BotonOnclick:
                            <button type="button" class="btn btn-sm btn-secondary" @onclick="ModalCancel">Cerrar</button>
                            <button type="button" class="btn btn-sm btn-success" @onclick="ModalOk2">Guardar</button>                            
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
}
